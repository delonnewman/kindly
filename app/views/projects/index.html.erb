<% projects.each do |group, projects| %>
  <div class="d-flex">
    <h3><%= group %></h3>
    <button
      class="btn btn-sm btn-outline-secondary mb-2 ms-2"
      hx-get="<%= new_project_path(group_name: group) %>"
      hx-swap="outerHTML"
      hx-target="#<%= new_project_id group %>"
    >
      <i class="bi bi-plus"></i> Add
    </button>
  </div>
  <div id="<%= new_project_id group %>"></div>
  <% projects.each do |project| %>
    <%= render partial: 'show', locals: { project: } %>
  <% end %>
<% end %>
