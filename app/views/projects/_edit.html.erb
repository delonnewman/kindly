<div id="project-<%= project.id %>">
  <div class="card mb-3">
    <div class="card-body">
      <%= form_for project, url: project_path(project) do |f| %>
        <%= f.text_field :name, class: 'form-control' %>
        <div class="mt-2">
          <button
            class="btn btn-sm btn-primary"
            hx-post="<%= project_path(project) %>"
            hx-swap="innerHTML"
            hx-target="#project-<%= project.id %>"
          >
            Update
          </button>
          <button
            class="btn btn-sm btn-outline-secondary"
            hx-get="<%= project_path(project) %>"
            hx-swap="innerHTML"
            hx-target="#project-<%= project.id %>"
          >
            Cancel
          </button>
          <button
            class="btn btn-sm btn-link text-danger"
            hx-confirm="Are you sure you want to delete this project?"
            hx-delete="<%= project_path(project) %>"
            hx-swap="outerHTML"
            hx-target="#project-<%= project.id %>"
          >
            Delete
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
