<div class="d-flex justify-content-between border-bottom pb-3 mb-3">
  <div>
    <h6><%= time_entry.project %></h6>
    <small class="text-muted"><%= time_entry.description %></small>
  </div>
  <div class="d-flex align-items-center">
    <%= time_entry.duration %>
    <button
      class="btn btn-sm btn-outline-secondary ms-2"
      hx-get="<%= edit_time_entry_path(time_entry, entry_date: time_entry.created_at.to_date) %>"
      hx-swap="innerHTML"
      hx-target="#entry-<%= time_entry.id %>"
    >
      Edit
    </button>
  </div>
</div>
