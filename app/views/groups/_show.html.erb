<%# locals: (group:) %>

<div id="<%= dom_id group %>" class="me-4 border rounded p-4" style="min-width:<%= group_card_width %>px">
  <div class="d-flex justify-content-between">
    <div class="d-flex">
      <h3><%= group.name %></h3>
      <button
        class="btn btn-sm btn-link"
        hx-get="<%= edit_group_path(group) %>"
        hx-swap="outerHTML"
        hx-target="#<%= new_project_id group %>"
      >
        Edit
      </button>
    </div>
    <button
      class="btn btn-sm btn-outline-secondary mb-2 ms-2"
      hx-get="<%= new_project_path(group_id: group.id) %>"
      hx-swap="outerHTML"
      hx-target="#<%= new_project_id group %>"
    >
      <i class="bi bi-plus"></i> Add
    </button>
  </div>
  <div id="projects-container" class="mt-3">
    <div id="<%= new_project_id group %>"></div>
    <% group.projects.each do |project| %>
      <%= render 'projects/show', project: %>
    <% end %>
  </div>
</div>
